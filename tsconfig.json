{
    "compilerOptions": {
      "target": "ES2020",
      "baseUrl": "src",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "jsx": "react-jsx",
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true
    },
    "include": [
      "src",
      "./src/**/*.tsx"
    ]
  }